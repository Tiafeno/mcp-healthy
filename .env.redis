# Configuration Redis pour Healthy MCP

# URL de connexion Redis (format: redis://[password@]host:port/db)
REDIS_URL=redis://localhost:6379/0

# TTL par défaut pour les messages en cache (en secondes)
# 3600 = 1 heure, 86400 = 1 jour
REDIS_DEFAULT_TTL=86400

# Préfixe pour les clés Redis
REDIS_KEY_PREFIX=healthy_mcp

# Timeout de connexion Redis (en secondes)
REDIS_CONNECT_TIMEOUT=5

# Timeout des opérations Redis (en secondes)  
REDIS_SOCKET_TIMEOUT=10

# Activer/désactiver Redis (true/false)
# Si désactivé, l'application fonctionnera sans cache
REDIS_ENABLED=true