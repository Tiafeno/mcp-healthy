# Configuration du logging pour healthy-mcp
# Niveaux disponibles: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Répertoire des fichiers de log
LOG_DIR=logs

# Nom de l'application (utilisé pour nommer les fichiers de log)
APP_NAME=healthy-mcp

# Taille maximum des fichiers de log en octets (10MB par défaut)
LOG_MAX_BYTES=10485760

# Nombre de fichiers de backup à conserver
LOG_BACKUP_COUNT=5

# Format des logs (simple ou detailed)
LOG_FORMAT=detailed

# Activer/désactiver le logging en console (true/false)
LOG_CONSOLE=true

# Activer/désactiver le logging dans des fichiers (true/false)
LOG_FILE=true